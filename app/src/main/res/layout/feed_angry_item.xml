<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:elevation="10dp">

        <TextView
            android:id="@+id/feed_angry_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="정현왕자님"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"/>

        <ImageButton
            android:id="@+id/feed_angry_more_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:background="@null"
            android:backgroundTint="@color/black"/>

        <TextView
            android:id="@+id/feed_angry_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="2021년 7월 14일"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_light"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/feed_angry_content_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="나는 강남에 빌딩있는데 이 인생 패배자들아 ㅗㅗ"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:elevation="10dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/feed_angry_like_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_empty"
            android:background="@null"/>

        <TextView
            android:id="@+id/feed_angry_like_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="123"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"/>

        <ImageButton
            android:id="@+id/feed_angry_comment_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_comment"
            android:background="@null"/>

        <TextView
            android:id="@+id/feed_angry_comment_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:text="35"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"/>

    </androidx.appcompat.widget.Toolbar>

</androidx.cardview.widget.CardView>