<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shame">

    <ImageButton
        android:id="@+id/love_close_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:src="@drawable/ic_close_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/your_color"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="@string/explain_your_color"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/your_color_shame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/font_nanum_gothic_bold"
        android:text="@string/shame"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_color" />

    <TextView
        android:id="@+id/explain_shame"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/noto_serif_kr_regular"
        android:text="@string/explain_shame"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_color_shame" />

    <TextView
        android:id="@+id/explain_shame2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/noto_serif_kr_regular"
        android:text="@string/explain_shame2"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explain_shame" />

    <ImageButton
        android:id="@+id/shame_prev_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_shame_prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>